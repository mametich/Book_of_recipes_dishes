<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/layout_margin_bottom_8"
    android:layout_marginVertical="@dimen/layout_margin_bottom_8"
    android:clickable="true"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/header_example"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:contentDescription="Заголовок"
            tools:src="@drawable/burger" />

        <TextView
            android:id="@+id/header_example"
            style="@style/StyleTitle14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin_bottom_8"
            android:layout_marginTop="@dimen/layout_margin_bottom_8"
            android:layout_marginBottom="@dimen/layout_margin_bottom_8"
            android:textColor="@color/text_view_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:text="Бургеры" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin_bottom_8"
            android:layout_marginEnd="@dimen/layout_margin_bottom_8"
            android:layout_marginBottom="@dimen/layout_margin_bottom_8"
            android:fontFamily="@font/montserrat_alternates_semi_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_example"
            tools:text="Рецепты всех популярных бургеров" />

    </LinearLayout>

</androidx.cardview.widget.CardView>