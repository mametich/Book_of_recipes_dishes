<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewRecipes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image"
            android:contentDescription="@string/title_burgers"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/titleOfRecipe"
            style="@style/StyleTitle20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin_16"
            android:layout_marginTop="@dimen/layout_margin_16"
            android:layout_marginBottom="@dimen/layout_margin_16"
            android:background="@drawable/shape"
            android:gravity="start"
            android:padding="@dimen/button_padding_text_vertical_10"
            android:textColor="@color/text_view_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivHeartFavourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_heart_favourites"
            app:layout_constraintEnd_toEndOf="@+id/imageViewRecipes"
            app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/layout_margin_16"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/StyleTitle20"
                android:text="@string/ingredients"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_16"
            android:background="@color/category_color"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_ingredient" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/StyleTitle20"
            android:text="@string/cookingMethod"
            android:layout_marginBottom="@dimen/layout_margin_12"
            android:layout_marginTop="@dimen/layout_margin_16"
            android:layout_marginStart="@dimen/layout_margin_16" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMethod"
            android:background="@color/category_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_16"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_method"
            />

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>